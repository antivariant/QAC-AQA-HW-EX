<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/courseElement"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewCourseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course name"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textViewTrainerNameCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="@string/trainer_caption"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCourseName" />

    <TextView
        android:id="@+id/textViewTrainerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:text="Имя тренера"
        app:layout_constraintStart_toEndOf="@+id/textViewTrainerNameCaption"
        app:layout_constraintTop_toBottomOf="@+id/textViewCourseName" />

    <ImageView
        android:id="@+id/imageViewTrainer"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTrainerName"
        app:srcCompat="@drawable/igor_photo" />

    <TextView
        android:id="@+id/textViewTrainerDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Описание тренера"
        app:layout_constraintEnd_toStartOf="@+id/imageViewTrainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTrainerName" />

    <TextView
        android:id="@+id/textViewCourseDescriptionCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/course_description_caption"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTrainerDescription" />

    <TextView
        android:id="@+id/textViewCourseDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="Описание курса"
        app:layout_constraintTop_toBottomOf="@+id/textViewCourseDescriptionCaption" />


</androidx.constraintlayout.widget.ConstraintLayout>